#include <stdio.h>
int main() {
float sayi1,sayi2,sonuc;
printf("Lutfen 2 tane sayi giriniz.\n");
scanf("%f%f",&sayi1,&sayi2);
printf("girdiginiz ilk sayi = %.2f\t girdiginiz ikinci sayi = %.2f\n",sayi1,sayi2 );
printf("ilk sayi + ikinci sayi = %.2f\n",sonuc=sayi1+sayi2);
printf("ilk sayi - ikinci sayi = %.2f\n",sonuc=sayi1-sayi2);
printf("ilk sayi x ikinci sayi = %.2f\n",sonuc=sayi1*sayi2);
printf("ilk sayi / ikinci sayi = %.2f\n",sonuc=sayi1/sayi2);

return 0;
}
